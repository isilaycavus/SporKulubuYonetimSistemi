@{
    ViewData["Title"] = "Hakkımızda";
}

<!-- Hero Section -->
<div class="about-hero-section">
    <div class="hero-background">
        <div class="hero-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
        </div>
    </div>
    <div class="container">
        <div class="hero-content text-center">
            <div class="hero-badge-top" data-aos="fade-down">
                <span class="badge-text">🏆 Hakkımızda</span>
            </div>
            <h1 class="hero-title" data-aos="fade-up" data-aos-delay="200">
                <span class="title-highlight">Bizim</span> Hikayemiz
            </h1>
            <p class="hero-subtitle" data-aos="fade-up" data-aos-delay="400">
                2010'dan bu yana spor tutkusuyla büyüyen bir aile
            </p>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="about-content-section">
    <div class="container">

        <!-- Kulüp Tarihçesi -->
        <div class="content-card" data-aos="fade-up">
            <div class="card-icon">
                <i class="fas fa-history"></i>
            </div>
            <div class="card-content">
                <h3 class="card-title">Kulüp Tarihçesi</h3>
                <p class="card-text">
                    2010 yılında kurulan kulübümüz, amatör ve profesyonel düzeyde sporcular yetiştirmeyi amaçlamaktadır.
                    Fiziksel gelişim, disiplin ve takım ruhunu ön planda tutarak çok sayıda spor branşında faaliyet göstermekteyiz.
                </p>
                <div class="timeline-indicator">
                    <span class="year">2010</span>
                    <span class="label">Kuruluş Yılı</span>
                </div>
            </div>
        </div>

        <!-- Vizyon & Misyon -->
        <div class="vision-mission-section" data-aos="fade-up" data-aos-delay="200">
            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="vm-card vision-card">
                        <div class="vm-icon">
                            <i class="fas fa-eye"></i>
                        </div>
                        <h3 class="vm-title">Vizyonumuz</h3>
                        <p class="vm-text">Türkiye'nin önde gelen amatör spor kulüplerinden biri olmak.</p>
                        <div class="vm-decoration"></div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="vm-card mission-card">
                        <div class="vm-icon">
                            <i class="fas fa-bullseye"></i>
                        </div>
                        <h3 class="vm-title">Misyonumuz</h3>
                        <p class="vm-text">Her yaştan bireyin sporla iç içe bir yaşam sürmesini sağlamak.</p>
                        <div class="vm-decoration"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Yönetim Kadrosu -->
        <div class="management-section" data-aos="fade-up" data-aos-delay="400">
            <div class="section-header text-center">
                <span class="section-badge">Ekibimiz</span>
                <h2 class="section-title">Yönetim Kadrosu</h2>
                <p class="section-subtitle">Deneyimli ve tutkulu yönetim ekibimiz</p>
                <div class="section-divider"></div>
            </div>

            <div class="management-grid">
                <div class="management-card" data-aos="zoom-in" data-aos-delay="500">
                    <div class="member-avatar">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <div class="member-info">
                        <h4 class="member-name">Ayşe Yılmaz</h4>
                        <span class="member-position">Başkan</span>
                    </div>
                    <div class="member-decoration"></div>
                </div>

                <div class="management-card" data-aos="zoom-in" data-aos-delay="600">
                    <div class="member-avatar">
                        <i class="fas fa-user-cog"></i>
                    </div>
                    <div class="member-info">
                        <h4 class="member-name">Mehmet Demir</h4>
                        <span class="member-position">Koordinatör</span>
                    </div>
                    <div class="member-decoration"></div>
                </div>

                <div class="management-card" data-aos="zoom-in" data-aos-delay="700">
                    <div class="member-avatar">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="member-info">
                        <h4 class="member-name">Elif Kaya</h4>
                        <span class="member-position">Üye İlişkileri</span>
                    </div>
                    <div class="member-decoration"></div>
                </div>
            </div>
        </div>

        <!-- Tesislerimiz -->
        <div class="facilities-section" data-aos="fade-up" data-aos-delay="600">
            <div class="section-header text-center">
                <span class="section-badge">Tesislerimiz</span>
                <h2 class="section-title">Modern Spor Tesisleri</h2>
                <p class="section-subtitle">En iyi ekipmanlarla donatılmış tesislerimiz</p>
                <div class="section-divider"></div>
            </div>

            <div class="facilities-grid">
                <div class="facility-card" data-aos="fade-right" data-aos-delay="700">
                    <div class="facility-image">
                        <img src="~/images/salon.jpg" alt="Spor Salonu" />
                        <div class="facility-overlay">
                            <div class="facility-icon">
                                <i class="fas fa-dumbbell"></i>
                            </div>
                        </div>
                    </div>
                    <div class="facility-content">
                        <h4 class="facility-title">Çok Amaçlı Spor Salonu</h4>
                        <p class="facility-description">400m² çok amaçlı spor salonu</p>
                        <div class="facility-features">
                            <span class="feature-tag">Modern Ekipman</span>
                            <span class="feature-tag">Klimalı</span>
                            <span class="feature-tag">Geniş Alan</span>
                        </div>
                    </div>
                </div>

                <div class="facility-card" data-aos="fade-left" data-aos-delay="800">
                    <div class="facility-image">
                        <img src="~/images/havuz.jpg" alt="Yüzme Havuzu" />
                        <div class="facility-overlay">
                            <div class="facility-icon">
                                <i class="fas fa-swimmer"></i>
                            </div>
                        </div>
                    </div>
                    <div class="facility-content">
                        <h4 class="facility-title">Yarı Olimpik Havuz</h4>
                        <p class="facility-description">25 metre yarı olimpik yüzme havuzu</p>
                        <div class="facility-features">
                            <span class="feature-tag">Temiz Su</span>
                            <span class="feature-tag">Isıtmalı</span>
                            <span class="feature-tag">Profesyonel</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- İstatistikler -->
        <div class="stats-section" data-aos="fade-up" data-aos-delay="900">
            <div class="stats-container">
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="stat-content">
                        <h4 class="counter" data-target="14">0</h4>
                        <span>Yıllık Deneyim</span>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h4 class="counter" data-target="500">0</h4>
                        <span>Mutlu Üye</span>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="stat-content">
                        <h4 class="counter" data-target="100">0</h4>
                        <span>Başarı</span>
                    </div>
                </div>
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="fas fa-medal"></i>
                    </div>
                    <div class="stat-content">
                        <h4 class="counter" data-target="25">0</h4>
                        <span>Ödül</span>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // AOS Animation Initialize
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            offset: 100
        });

        // Counter Animation
        function animateCounters() {
            const counters = document.querySelectorAll('.counter');
            counters.forEach(counter => {
                const target = parseInt(counter.getAttribute('data-target'));
                const increment = target / 100;
                let current = 0;

                const updateCounter = () => {
                    if (current < target) {
                        current += increment;
                        counter.textContent = Math.ceil(current);
                        setTimeout(updateCounter, 20);
                    } else {
                        counter.textContent = target;
                    }
                };

                updateCounter();
            });
        }

        // Trigger counter animation when section is visible
        const statsSection = document.querySelector('.stats-section');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    animateCounters();
                    observer.unobserve(entry.target);
                }
            });
        });

        if (statsSection) {
            observer.observe(statsSection);
        }
    </script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
}